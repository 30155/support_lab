<div class="toppage">
  <h1 class="top">Schedule Calendar</h1><br>

  <%= form_with model: @schedule, local: true, class: 'schedule-form' do |f| %>
    <%= f.label :日時, class: 'datetime-lavel' %>
    <%= f.datetime_field :datetime, class: 'datetime-select' %>
    <%= f.label :予定, class: 'plan-lavel' %>
    <%= f.text_field :plan, class: 'plan-input' %>
    <%= f.label :メモ, class: 'memo-lavel' %>
    <%= f.text_field :memo, class: 'memo-input' %>
    <%= f.submit '保存' %>
  <% end %>

<div class="col-md-8">
  <%= month_calendar events: @schedules do |date, schedules| %>
    <%= date %>

    <% schedules.each do |schedule| %>
      <div>
        <%= schedule.datetime.strftime("%-H:%-M") %>
        <%= link_to schedule.plan, "#", class:"plan-link" %>
      </div>
    <% end %>
  <% end %>
</div>
