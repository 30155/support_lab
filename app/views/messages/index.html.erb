<%= render "shared/header" %>

<div class="chat-header">
  <div class="left-header">
    <div class="room-title">
      <%= @room.name %>
    </div>
  </div>
  <div class="right-header">
    <%= link_to "Delete Room", "#", method: :delete, class:"delete-room-button" %>
  </div>
</div>


<div class="message-wrapper">
  <div class="message-contents" id="message_area">
    <% @messages.each do |message| %>
      <%if current_user.id == message.user_id%>
        <div class="left">
          <div class="messages-current_user">
            <div class="upper-message">
              <div class="message-user">
                <%= message.user.nickname %>
              </div>
              <div class="message-date">
                <%= message.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
              </div>
            </div>
            <div class="lower-message">
              <div class="message-content">
                <%= message.content %>
              </div>
            </div>
          </div>
        </div><br>
      <% else %>
        <div class="right">
          <div class="messages-another_user">
            <div class="upper-message">
              <div class="message-user">
                <%= message.user.nickname %>
              </div>
              <div class="message-date">
                <%= message.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
              </div>
            </div>
            <div class="lower-message">
              <div class="message-content">
                <%= message.content %>
              </div>
            </div>
          </div>
        </div><br>
      <% end %>
    <% end %>
  </div>
</div>


<div class="form-area">
  <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
    <div class="form-input">
      <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">Image</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
    <%= f.submit 'Submit', class: 'form-submit' %>
  <% end %>
</div>

